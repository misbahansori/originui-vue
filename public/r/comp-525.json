      "path": "components/comp-525.vue",
      "content": "<script lang=\"ts\" setup>\nimport {\n  Stepper,\n  StepperDescription,\n  StepperIndicator,\n  StepperItem,\n  StepperSeparator,\n  StepperTitle,\n  StepperTrigger,\n} from \"@/registry/default/ui/stepper\";\n\nconst steps = [\n  {\n    step: 1,\n    title: \"Step One\",\n    description: \"Desc for step one\",\n  },\n  {\n    step: 2,\n    title: \"Step Two\",\n    description: \"Desc for step two\",\n  },\n  {\n    step: 3,\n    title: \"Step Three\",\n    description: \"Desc for step three\",\n  },\n];\n</script>\n\n<template>\n  <div class=\"space-y-8 text-center\">\n    <Stepper :default-value=\"2\">\n      <StepperItem\n        v-for=\"{ step, title, description } in steps\"\n        :key=\"step\"\n        :step=\"step\"\n        class=\"max-md:items-start\"\n        :class=\"step !== steps.length ? 'flex-1' : ''\"\n      >\n        <StepperTrigger class=\"gap-4 rounded max-md:flex-col\">\n          <StepperIndicator />\n          <div class=\"text-center md:-order-1 md:text-left\">\n            <StepperTitle>{{ title }}</StepperTitle>\n            <StepperDescription class=\"max-sm:hidden\">\n              {{ description }}\n            </StepperDescription>\n          </div>\n        </StepperTrigger>\n        <StepperSeparator v-if=\"step < steps.length\" class=\"max-md:mt-3.5 md:mx-4\" />\n      </StepperItem>\n    </Stepper>\n    <p class=\"text-muted-foreground mt-2 text-xs\" role=\"region\" aria-live=\"polite\">\n      Stepper with inline titles and descriptions\n    </p>\n  </div>\n</template>\n",
      "type": "registry:component"
    }
