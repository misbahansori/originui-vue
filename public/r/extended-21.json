  "files": [
    {
      "path": "components/extended-21.vue",
      "content": "<script setup lang=\"ts\">\nimport { Badge } from \"@/registry/default/ui/badge\";\nimport { Button } from \"@/registry/default/ui/button\";\nimport {\n  Card,\n  CardContent,\n  CardHeader,\n  CardTitle,\n} from \"@/registry/default/ui/card\";\nimport {\n  DropdownMenu,\n  DropdownMenuContent,\n  DropdownMenuItem,\n  DropdownMenuSeparator,\n  DropdownMenuTrigger,\n} from \"@/registry/default/ui/dropdown-menu\";\nimport {\n  LucideArrowDown,\n  LucideArrowUp,\n  LucideMoreHorizontal,\n  LucidePin,\n  LucideSettings,\n  LucideShare2,\n  LucideTrash,\n  LucideTriangleAlert,\n} from \"lucide-vue-next\";\n\nconst stats = [\n  {\n    title: \"Total Sales\",\n    value: 892200000,\n    delta: 0.2,\n    lastMonth: 889100000,\n    positive: true,\n    prefix: \"$\",\n    suffix: \"M\",\n    format: (v: number) => `$${(v / 1_000_000).toFixed(1)}M`,\n    lastFormat: (v: number) => `$${(v / 1_000_000).toFixed(1)}M`,\n    bg: \"bg-zinc-950\",\n    svg: \"total-sales\",\n  },\n  {\n    title: \"New Customers\",\n    value: 12800,\n    delta: 3.1,\n    lastMonth: 12400,\n    positive: true,\n    prefix: \"\",\n    suffix: \"\",\n    bg: \"bg-fuchsia-600\",\n    svg: \"new-customers\",\n  },\n  {\n    title: \"Refunds\",\n    value: 320,\n    delta: -1.2,\n    lastMonth: 340,\n    positive: false,\n    prefix: \"\",\n    suffix: \"\",\n    bg: \"bg-blue-600\",\n    svg: \"refunds\",\n  },\n  {\n    title: \"Churn Rate\",\n    value: 2.3,\n    delta: -0.1,\n    lastMonth: 2.4,\n    positive: false,\n    prefix: \"\",\n    suffix: \"%\",\n    bg: \"bg-teal-600\",\n    svg: \"churn-rate\",\n  },\n];\n\nfunction formatNumber(n: number) {\n  if (n >= 1_000_000) return (n / 1_000_000).toFixed(1) + \"M\";\n  if (n >= 1_000) return n.toLocaleString();\n  return n.toString();\n}\n</script>\n\n<template>\n  <div class=\"*:not-first:mt-2\">\n    <div class=\"grid grow grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4\">\n      <Card\n        v-for=\"(stat, index) in stats\"\n        :key=\"index\"\n        :class=\"`relative overflow-hidden ${stat.bg} text-white`\"\n      >\n        <!-- SVG Background Decorations -->\n        <div\n          class=\"pointer-events-none absolute top-0 right-0 h-full w-2/3 opacity-40\"\n        >\n          <!-- Total Sales SVG -->\n          <svg\n            v-if=\"stat.svg === 'total-sales'\"\n            class=\"h-full w-full\"\n            viewBox=\"0 0 300 200\"\n            fill=\"none\"\n          >\n            <circle cx=\"220\" cy=\"100\" r=\"90\" fill=\"#fff\" fill-opacity=\"0.08\" />\n            <circle cx=\"260\" cy=\"60\" r=\"60\" fill=\"#fff\" fill-opacity=\"0.10\" />\n            <circle cx=\"200\" cy=\"160\" r=\"50\" fill=\"#fff\" fill-opacity=\"0.07\" />\n            <circle cx=\"270\" cy=\"150\" r=\"30\" fill=\"#fff\" fill-opacity=\"0.12\" />\n          </svg>\n\n          <!-- New Customers SVG -->\n          <svg\n            v-if=\"stat.svg === 'new-customers'\"\n            class=\"h-full w-full\"\n            viewBox=\"0 0 200 200\"\n            fill=\"none\"\n          >\n            <defs>\n              <filter id=\"blur2\" x=\"-20%\" y=\"-20%\" width=\"140%\" height=\"140%\">\n                <feGaussianBlur stdDeviation=\"10\" />\n              </filter>\n            </defs>\n            <ellipse\n              cx=\"170\"\n              cy=\"60\"\n              rx=\"40\"\n              ry=\"18\"\n              fill=\"#fff\"\n              fill-opacity=\"0.13\"\n              filter=\"url(#blur2)\"\n            />\n            <rect\n              x=\"120\"\n              y=\"20\"\n              width=\"60\"\n              height=\"20\"\n              rx=\"8\"\n              fill=\"#fff\"\n              fill-opacity=\"0.10\"\n            />\n            <polygon\n              points=\"150,0 200,0 200,50\"\n              fill=\"#fff\"\n              fill-opacity=\"0.07\"\n            />\n            <circle cx=\"180\" cy=\"100\" r=\"14\" fill=\"#fff\" fill-opacity=\"0.16\" />\n          </svg>\n\n          <!-- Refunds SVG -->\n          <svg\n            v-if=\"stat.svg === 'refunds'\"\n            class=\"h-full w-full\"\n            viewBox=\"0 0 200 200\"\n            fill=\"none\"\n          >\n            <defs>\n              <filter id=\"blur3\" x=\"-20%\" y=\"-20%\" width=\"140%\" height=\"140%\">\n                <feGaussianBlur stdDeviation=\"12\" />\n              </filter>\n            </defs>\n            <rect\n              x=\"120\"\n              y=\"0\"\n              width=\"70\"\n              height=\"70\"\n              rx=\"35\"\n              fill=\"#fff\"\n              fill-opacity=\"0.09\"\n              filter=\"url(#blur3)\"\n            />\n            <ellipse\n              cx=\"170\"\n              cy=\"80\"\n              rx=\"28\"\n              ry=\"12\"\n              fill=\"#fff\"\n              fill-opacity=\"0.12\"\n            />\n            <polygon\n              points=\"200,0 200,60 140,0\"\n              fill=\"#fff\"\n              fill-opacity=\"0.07\"\n            />\n            <circle cx=\"150\" cy=\"30\" r=\"10\" fill=\"#fff\" fill-opacity=\"0.15\" />\n          </svg>\n\n          <!-- Churn Rate SVG -->\n          <svg\n            v-if=\"stat.svg === 'churn-rate'\"\n            class=\"h-full w-full\"\n            viewBox=\"0 0 200 200\"\n            fill=\"none\"\n          >\n            <defs>\n              <filter id=\"blur4\" x=\"-20%\" y=\"-20%\" width=\"140%\" height=\"140%\">\n                <feGaussianBlur stdDeviation=\"16\" />\n              </filter>\n            </defs>\n            <polygon\n              points=\"200,0 200,100 100,0\"\n              fill=\"#fff\"\n              fill-opacity=\"0.09\"\n            />\n            <ellipse\n              cx=\"170\"\n              cy=\"40\"\n              rx=\"30\"\n              ry=\"18\"\n              fill=\"#fff\"\n              fill-opacity=\"0.13\"\n              filter=\"url(#blur4)\"\n            />\n            <rect\n              x=\"140\"\n              y=\"60\"\n              width=\"40\"\n              height=\"18\"\n              rx=\"8\"\n              fill=\"#fff\"\n              fill-opacity=\"0.10\"\n            />\n            <circle cx=\"150\" cy=\"30\" r=\"14\" fill=\"#fff\" fill-opacity=\"0.18\" />\n            <line\n              x1=\"120\"\n              y1=\"0\"\n              x2=\"200\"\n              y2=\"80\"\n              stroke=\"#fff\"\n              stroke-opacity=\"0.08\"\n              stroke-width=\"6\"\n            />\n          </svg>\n        </div>\n\n        <CardHeader\n          class=\"relative z-10 flex items-center justify-between border-0\"\n        >\n          <CardTitle class=\"text-sm font-medium text-white/90\">\n            {{ stat.title }}\n          </CardTitle>\n          <div class=\"ml-auto\">\n            <DropdownMenu>\n              <DropdownMenuTrigger as-child>\n                <Button\n                  variant=\"ghost\"\n                  size=\"sm\"\n                  mode=\"icon\"\n                  class=\"-me-1.5 text-white/80 hover:text-white\"\n                >\n                  <LucideMoreHorizontal />\n                </Button>\n              </DropdownMenuTrigger>\n              <DropdownMenuContent align=\"end\" side=\"bottom\">\n                <DropdownMenuItem>\n                  <LucideSettings />\n                  Settings\n                </DropdownMenuItem>\n                <DropdownMenuItem>\n                  <LucideTriangleAlert />\n                  Add Alert\n                </DropdownMenuItem>\n                <DropdownMenuItem>\n                  <LucidePin />\n                  Pin to Dashboard\n                </DropdownMenuItem>\n                <DropdownMenuItem>\n                  <LucideShare2 />\n                  Share\n                </DropdownMenuItem>\n                <DropdownMenuSeparator />\n                <DropdownMenuItem variant=\"destructive\">\n                  <LucideTrash />\n                  Remove\n                </DropdownMenuItem>\n              </DropdownMenuContent>\n            </DropdownMenu>\n          </div>\n        </CardHeader>\n        <CardContent class=\"relative z-10 space-y-2.5\">\n          <div class=\"flex items-center gap-2.5\">\n            <span class=\"text-2xl font-semibold tracking-tight\">\n              {{\n                stat.format\n                  ? stat.format(stat.value)\n                  : stat.prefix + formatNumber(stat.value) + stat.suffix\n              }}\n            </span>\n            <Badge class=\"bg-white/20 font-semibold\">\n              <LucideArrowUp v-if=\"stat.delta > 0\" class=\"size-4\" />\n              <LucideArrowDown v-else class=\"size-4\" />\n              {{ stat.delta }}%\n            </Badge>\n          </div>\n          <div\n            class=\"mt-2 border-t border-white/20 pt-2.5 text-xs text-white/80\"\n          >\n            Vs last month:\n            <span class=\"font-medium text-white\">\n              {{\n                stat.lastFormat\n                  ? stat.lastFormat(stat.lastMonth)\n                  : stat.prefix + formatNumber(stat.lastMonth) + stat.suffix\n              }}\n            </span>\n          </div>\n        </CardContent>\n      </Card>\n    </div>\n    <p\n      class=\"text-muted-foreground mt-2 text-xs\"\n      role=\"region\"\n      aria-live=\"polite\"\n    >\n      Ported from reui.io colored statistic cards\n      <a\n        class=\"hover:text-foreground underline\"\n        href=\"https://reui.io/blocks/cards\"\n        target=\"_blank\"\n        rel=\"noopener nofollow\"\n      >\n        reui.io\n      </a>\n    </p>\n  </div>\n</template>\n",
      "type": "registry:component"
    }
  ],
