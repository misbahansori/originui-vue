{
  "$schema": "https://shadcn-vue.com/schema/registry-item.json",
  "name": "comp-386",
  "type": "registry:component",
  "dependencies": [
    "lucide-vue-next"
  ],
  "registryDependencies": [
    "https://originui-vue.com/r/button.json",
    "https://originui-vue.com/r/popover.json"
